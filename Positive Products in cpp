#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    long long int a[n];
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    long long int p=0,q=0;
	    for(int i=0;i<n;i++){
	        if(a[i]>0)
	        p++;
	        if(a[i]<0)
	        q++;
	    }
	    cout<<(p*(p-1))/2+(q*(q-1))/2<<endl;
	}
	return 0;
}
