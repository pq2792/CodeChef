#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t ;
	cin>>t;
	while(t--){
	    int H,x,y;
        cin>>H>>x>>y;

        if(x>y){
            cout<<ceil(H/(x*1.0))<<endl;
        }
        else{
            H-=y;
            cout<<ceil(H/(x*1.0))+1<<endl;
        }
	}
	return 0;
}
