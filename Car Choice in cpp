#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	float a,b,c,d;
	while(t--){
	    cin>>a>>b>>c>>d;
	    float e=c/a;
	    float f=d/b;
	    if(e==f){
	        cout<<"0"<<endl;
	    }
	    else if(e>f){
	        cout<<"1"<<endl;
	    }
	    else {
	        cout<<"-1"<<endl;
	    }
	}
	return 0;
}
