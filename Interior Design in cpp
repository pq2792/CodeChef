#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int a,b,c,d;
	while(t--){
	    cin>>a>>b>>c>>d;
	    int e=0;
	    int f=0;
	    e=a+b;
	    f=c+d;
	    if(e>f){
	        cout<<f<<endl;
	    }
	    else{
	        cout<<e<<endl;
	    }
	}
	return 0;
}
