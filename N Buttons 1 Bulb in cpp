#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    string a,b;
	    cin>>a>>b;
	    int c=0;
	    for(int i=0;i<a.length();i++){
	        if(a[i]!=b[i]){
	            c++;
	        }
	    }
	    
	    if(c%2==0){
	        cout<<"1"<<endl;
	    }
	    else{
	        cout<<"0"<<endl;
	    }
	}
	return 0;
}
