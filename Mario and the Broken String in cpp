#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int n;
	while(t--){
	    cin>>n;
	    string s;
	    cin>>s;
	    int e = (n/2);
	    int flag;
	    for(int i=0;i<e;i++){
	        if(s[i]==s[i+e]){
	            flag=1;
	        }
	        else{
	            flag=0;
	            break;
	        }
	    }
	    if(flag){
	        cout<<"yes"<<endl;
	    }
	    else{
	        cout<<"no"<<endl;
	    }
	}
	return 0;
}
