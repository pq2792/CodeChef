#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	long long int x1,x2,y1,y2;
	while(t--){
	    cin>>x1>>y1>>x2>>y2;
	    int a=0;
	    a=(x2-x1);
	    int d=0;
	    d=abs(a);
	    int b=0;
	    int e=0;
	    b=(y2-y1);
	    e=abs(b);
	    if(d>e){
	        cout<<d<<endl;
	    }
	    else{
	        cout<<e<<endl;
	    }
	}
	return 0;
}
