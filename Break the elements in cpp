#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	     cin>>n;
	     int a[n];
	     int c=0,d=0;
	     for(int i=0;i<n;i++){
	         cin>>a[i];
	         if(a[i]%2==0){
	             c++;
	         }
	         else{
	             d++;
	         }
	     }
	     if(c==n || d==n){
	         cout<<"0"<<endl;
	     }
	     else{
	         cout<<c<<endl;
	     }
	}
	return 0;
}
