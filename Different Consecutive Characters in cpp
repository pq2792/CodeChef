#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    string a;
	    cin>>a;
	    int c=0;
	    for(int i=0;i<n;i++){
	        if(a[i]==a[i+1]){
	            c++;
	        }
	        else{
	            continue;
	        }
	    }
	    cout<<c<<endl;
	}
	return 0;
}
