#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	float qty,price;
	std::cin >> t;
	while(t--)
	{
	    std::cin >> qty>>price;
	   if(qty>1000)
	   {
	       std::cout<< fixed<<setprecision(6)<<qty*price-(qty*price*0.1) << std::endl;
	   }
	   else
	   {
	        std::cout<<fixed<<setprecision(6) << qty*price << std::endl;
	   }
	       
	 }
