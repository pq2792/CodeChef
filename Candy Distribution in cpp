#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int n,m;
	while(t--){
	    cin>>n>>m;
	    int d=0;
	    if(n%m==0){
	        d=n/m;
	        if(d%2==0){
	            cout<<"yes"<<endl;
	        }
	        else{
	            cout<<"no"<<endl;
	        }
	    }
	    else{
	        cout<<"no"<<endl;
	    }
	}
	return 0;
}
