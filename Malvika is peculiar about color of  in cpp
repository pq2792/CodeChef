#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    string s;
	    cin>>s;
	    int c=0,d=0,r;
	    for(int i=0;i<s.length();i++){
	        if(s[i]=='a'){
	            c++;
	        }
	        else if(s[i]=='b'){
	            d++;
	        }
	    }
	    if(c==0 || d==0){
	        cout<<"0"<<endl;
	    }
	    else{
	        r=max(c,d);
	        cout<<s.length()-r<<endl;
	    }
	    
	}
	return 0;
}
