#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int x,y;
	while(t--){
	    cin>>x>>y;
	    int q=abs(y-x);
	    if(q==1){
	        cout<<"1"<<endl;
	    }
	    else if(q%2==0){
	        cout<<q/2<<endl;
	    }
	    else{
	        cout<<(q/2)+1<<endl;
	    }
	}
	return 0;
}
