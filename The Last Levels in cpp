#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int x,y,z;
	    cin>>x>>y>>z;
	    if(x<=3){
	        cout<<x*y<<endl;
	    }
	    else if(x%3==0){
	        cout<<((x/3)-1)*z+(x*y)<<endl;
	    }
	    else{
	        cout<<((x/3)*z)+(x*y)<<endl;
	    }
	}
	return 0;
}
