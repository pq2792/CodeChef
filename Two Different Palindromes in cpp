#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    long int a,b;
	    cin>>a>>b;
	    if(a%2==0 && b%2==0){
	        cout<<"Yes"<<endl;
	    }
	    else if(a%2==0 && b%2==1){
	        if(b==1){
	            cout<<"No"<<endl;
	        }
	        else{
	            cout<<"Yes"<<endl;
	        }
	    }
	    else if(a%2==1 && b%2==0){
	        if(a==1){
	            cout<<"No"<<endl;
	        }
	        else{
	            cout<<"Yes"<<endl;
	        }
	    }
	    else if(a%2==1 && b%2==1){
	        cout<<"No"<<endl;
	    }
	}
	return 0;
}
