#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int k;
	    cin>>k;
	    int c=0;
	    for(int i=1;i<=k;i++){
	        if(i%2!=0){
	            c+=3;
	        }
	        else{
	            c-=1;
	        }
	    }
	    cout<<c<<endl;
	}
	return 0;
}
