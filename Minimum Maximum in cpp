#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	int t;
	cin>>t;
	while(t--){
	    long long int n;
	    cin>>n;
	    long long int a;
	    vector<int> ans;
	    for(int i=0;i<n;i++){
	        cin>>a;
	        ans.push_back(a);
	    }
	    sort(ans.begin(),ans.end());
	    cout<<ans[0]*(n-1)<<endl;
	}
	return 0;
}
