#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int a[n];
	    int c=0,d=0,e=0;
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	        if(a[i]<0){
	            c++;
	        }
	        else if(a[i]>0){
	            d++;
	        }
	        else if(a[i]==0){
	            e++;
	        }
	    }
	    if(c%2==0 || e>=1){
	        cout<<"0"<<endl;
	    }
	    else{
	        cout<<"1"<<endl;
	    }
	}
	return 0;
}
