#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    string s;
	    cin>>s;
	    int c=0,d=0;
	    for(int i=0;i<s.length();i++){
	        if(s[i]=='A' || s[i]=='D' || s[i]== 'O'|| s[i]=='P' || s[i]=='R' || s[i]=='Q'){
	            c++;
	        }
	        else if(s[i]=='B'){
	            c+=2;
	        }
	        
	    }
	    cout<<c<<endl;
	    
	}
	return 0;
}
